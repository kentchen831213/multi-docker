{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "kent831213/dockerhub/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "kent831213/dockerhub/server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "kent831213/dockerhub/worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "kent831213/dockerhub/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}
